  <script type="text/javascript">
  //styling JS
  $("#sidebar-container").height($(window).height());
  $("#layers").height($(window).height());
  $("#file-upload").css("top", $(window).height()/2-100);
  $("#file-upload").css("left", $(window).width()/2-200);

